---
interface Props {
  title: string;
  class: string;
  titleClass?: string;
}

const { class: className, title, titleClass = "mt-72" } = Astro.props;
---

<article
  class={`rounded-md bg-no-repeat bg-cover bg-top group overflow-hidden ${className}`}
>
  <div
    class="bg-gradient-to-b from-slate-900/50 to-slate-900 to-70% p-8
            text-white text-pretty mt-auto h-full group-hover:to-80% transition-color duration-500 group-hover:bg-slate-900/50 flex flex-col justify-end"
  >
    <h2 class={`text-2xl font-bold mb-4 titleClass ${titleClass}`}>{title}</h2>

    <slot />
  </div>
</article>
